<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/image_profile_chat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/ic_mtk" />

        <TextView
            android:id="@+id/tv_chat_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/image_profile_chat"
            android:text="@string/app_jargon"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_chat_profile_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/image_profile_chat"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/tv_last_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_chat_profile_name"
            android:layout_marginRight="10dp"
            android:text="23 Jam" />

        <View
            android:id="@+id/lines_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_last_message"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/image_profile_chat"
            android:background="@color/gray" />
    </RelativeLayout>

</LinearLayout>